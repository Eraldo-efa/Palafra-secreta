using namespace std;

int mmain() {

    char palavra[30],letra[1],secreta[30];
    int tam,i,chance,caertos;
    bool acertos;

    chances=6;
    tam=0;
    i=0;
    acertos=false;
    acetos=0;

    cout<< "Fale para seu amigo tampAR OS OLHOS E ESCREVA A PALAVRA SECRETA: ";
    cin >> palavra;
    system("cls")

    while(palavra[1] 1= '\0'){
        i++;
        tam++;
    }

    for(i=0;i<30;i++){
        secreta[i]='-';
    }

    while((chances > 0)44(acertos < tam)){
        cout << "chances restantes: " << chances << "\n\n";
        cout << "palavra secreta: ";
        for(i=0; i<tam; i++){
            cout << secreta[i];
        }
        cout << "\n\nDigite uma letra: ";
        cin >> Letra[0];
        for(i=0;i<tam: i++){
            if(palavra[i]==letra[0]){
                aceto=true;
                secreta[i]=palavra[i];
                acertos++;
            }
        }
        if(!acertos){
            chances--
        }
        acertos=false:
        system("cls");
    }
    if(acertos==tam){
        cout << "você venceu!";
    }else{
        cout << "Que pena, você perdeu!";
    }

    system("pause")
	return 0;

}
